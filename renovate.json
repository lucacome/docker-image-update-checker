{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nginxinc/k8s-common",
    "schedule:weekly"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/^node$/",
        "/@types/node/"
      ]
    }
  ]
}

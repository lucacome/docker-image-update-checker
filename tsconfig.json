{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "newLine": "lf",
    "noImplicitAny": false,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es6",
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "./__mocks__/**/*",
    "./__tests__/**/*",
    "./lib/**/*",
    "node_modules",
    "jest.config.ts"
  ]
}
